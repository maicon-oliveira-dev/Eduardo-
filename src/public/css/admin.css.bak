body.login-body,
body.admin-body {
  margin: 0;
  font-family: 'Montserrat', system-ui, sans-serif;
  background: radial-gradient(circle at top, rgba(208,179,122,0.06), #020308);
  color: #f5f5f5;
}

.login-wrapper {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-box {
  width: min(360px, 100% - 40px);
  padding: 26px 22px 24px;
  background-color: #05060a;
  border-radius: 16px;
  box-shadow: 0 18px 40px rgba(0,0,0,0.6);
  border: 1px solid rgba(208,179,122,0.24);
}

.login-box h1 {
  margin-top: 0;
  font-size: 1.4rem;
}

.field {
  display: flex;
  flex-direction: column;
  gap: 4px;
  margin-bottom: 10px;
  font-size: 0.8rem;
}

.field input {
  padding: 8px 10px;
  border-radius: 10px;
  border: 1px solid rgba(148,163,253,0.12);
  background: #020308;
  color: #f5f5f5;
}

.btn-primary {
  width: 100%;
  padding: 9px 0;
  margin-top: 4px;
  border-radius: 999px;
  border: none;
  background: #d0b37a;
  color: #020308;
  font-weight: 600;
  cursor: pointer;
}

.error {
  color: #f87171;
  font-size: 0.78rem;
}

.admin-header {
  padding: 14px 0;
  border-bottom: 1px solid rgba(208,179,122,0.18);
}

.admin-header-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 18px;
}

.logo-mark {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 26px;
  height: 26px;
  border-radius: 9px;
  background: #d0b37a;
  color: #020308;
  font-weight: 700;
  font-size: 0.9rem;
  margin-right: 8px;
}

.admin-main .admin-section {
  padding: 24px 0;
}
